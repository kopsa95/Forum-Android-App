<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.forum">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feed" />
        <activity android:name=".Editor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".post_detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".new_acc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login" />
        </activity>
        <activity android:name=".forgot_pass">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login" />
        </activity>
        <activity android:name=".profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".changePass">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".drafts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".myPost">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
        <activity android:name=".postToDraft">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".feed" />
        </activity>
    </application>

</manifest>